{
  "manifest_version": 3,
  "name": "Rogue Tracker",
  "version": "0.0.0",
  "permissions": ["activeTab", "webRequest"],
  "host_permissions": ["https://pokerogue.net/*", "https://api.pokerogue.net/*"],
  "background": {
    "type": "module",
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://api.pokerogue.net/*", "https://pokerogue.net/*"],
      "js": ["inject.js"],
      "run_at": "document_start",
      "all_frames": true
    },
    {
      "matches": ["https://pokerogue.net/*"],
      "js": ["content.js"],
      "css": ["styles.css"]
    },
    {
      "matches": ["https://pokerogue.net/*"],
      "js": ["end.js"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["inject.js", "content.js", "injected.js"],
      "matches": ["<all_urls>"],
      "use_dynamic_url": true,
      "extension_ids": []
    },
    {
      "resources": ["content.js"],
      "matches": ["<all_urls>"],
      "use_dynamic_url": true
    }
  ]
}
